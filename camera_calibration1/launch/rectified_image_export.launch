<launch>
	<node name="rosbag" pkg="rosbag" type="play" args="-l -r 2 /home/mano/data/2016-11-22-14-32-13_test.bag" required="true" output="screen">
		<remap from="/sensors/camera/image_color" to="/calibrated_camera/image_raw"/>
	</node>

	<node name="calibration_publisher" pkg="camera_calibration1" type="camera_info_publisher" args="--file /home/mano/data/calibrationdata/ost.yaml --camera /calibrated_camera" required="true"/>

	<node name="rectifyer" pkg="image_proc" type="image_proc" required="true" ns="/calibrated_camera"/>

	<node name="rect_video_recorder" pkg="image_view" type="video_recorder" respawn="false">
		<remap from="image" to="/calibrated_camera/image_rect_color"/>
	</node>
</launch>